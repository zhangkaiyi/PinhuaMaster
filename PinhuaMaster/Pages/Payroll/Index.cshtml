@page
@model PinhuaMaster.Pages.Payroll.IndexModel
@{
    ViewData["Title"] = "工资单";
}

<div id="toolbar">
    <a asp-page="Create" class="btn btn-default">新建</a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="box box-solid">
            <div class="box-body">
                <table data-toggle="table"
                       data-toolbar="#toolbar"
                       class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>年</th>
                            <th>月</th>
                            <th data-width="20"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payroll in Model.PayrollList)
            {
                <tr>
                    <td>@payroll.Y</td>
                    <td>@payroll.M</td>
                    <th><a>查看</a></th>
                </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>