@using PinhuaMaster.Services

@foreach (var navMenu in Model.NavMenus)
{
    if (navMenu.MenuType == MenuTypes.导航菜单)
    {

        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="@navMenu.Icon"></i> @navMenu.Name <span class="caret"></span></a>
            <ul class="dropdown-menu">
                @await Html.PartialAsync("_NavMenu", new NavMenuVM
                {
                    NavMenus = navMenu.SubNavMenus,
                    //MenuidsOpen = Model.MenuidsOpen
                })
            </ul>
        </li>

    }
    else if ((navMenu.MenuType == MenuTypes.操作菜单))
    {
        <li><a asp-page="@navMenu.Url"><i class="@navMenu.Icon"></i> @navMenu.Name</a></li>
    }
}