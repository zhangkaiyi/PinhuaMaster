@page
@model PinhuaMaster.Pages.Finance.Payment.IndexModel
@{
    ViewData["Title"] = "Index";

    var fukuanCount = pinhuaContext.付款单.Count();
    var paymentList = pinhuaContext.付款单.OrderByDescending(x => x.付款日期).ThenBy(x => x.单位编号);

}

<div class="row">
    <section class="col-sm-9">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">付款清单</h3>
                <span class="label label-primary pull-right">@fukuanCount</span>
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="mailbox-controls no-padding" id="toolbar">
                    <!-- Check all button -->
                    <a href="@Url.Action("FukuanAdd")" class="btn btn-default btn-sm"><i class="fa fa-plus"></i><span> 新增记录</span></a>

                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-sm"><i class="fa fa-trash-o"></i></button>
                    </div>
                </div>
                <table id="collectionTable"
                       data-toggle="table"
                       data-search="true"
                       data-toolbar="#toolbar"
                       data-pagination="true"
                       data-page-size="10"
                       data-page-list="[10, 20, 50, 100, 200, ALL]"
                       data-classes="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>收款日期</th>
                            <th class="hidden-xs">收款单号</th>
                            <th>收款单位</th>
                            <th>收款金额</th>
                            <th>收款类型</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var collection in paymentList)
                        {
                            <tr>
                                <td>@collection.付款日期?.ToString("yyyy-MM-dd")</td>
                                <td>@collection.付款单号</td>
                                <td>@collection.付款单位</td>
                                <td>@collection.付款金额</td>
                                <td>@collection.付款类型</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

        @using (Html.BeginForm("FukuanDelete", "Caiwu", FormMethod.Post, new { id = "del_form" }))
        {
            <input type="hidden" id="del_rcid" name="rcId" />
        }
    </section>
</div>