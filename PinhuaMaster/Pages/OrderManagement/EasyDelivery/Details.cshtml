@page "{id?}"
@model PinhuaMaster.Pages.OrderManagement.EasyDelivery.DetailsModel
@{
    ViewData["Title"] = "查看";
    Layout = "~/Pages/_Layout.cshtml";
}

<div id="vueScope" v-cloak>
    <form method="post" id="myForm">
        <section class="invoice" id="invoice" style="margin:0px;margin-bottom:20px;">
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        <i class="fa fa-globe"></i> 胜美木业, Inc.
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info form-horizontal">
                <div class="col-sm-4 invoice-col">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3" asp-for="Order.Main.DeliveryType">类型</label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <input class="form-control" asp-for="Order.Main.DeliveryTypeDescription" readonly />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-danger btn-flat" style="width:40px"><i class="fa fa-bars"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3" asp-for="Order.Main.CustomerName">客户</label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <input class="form-control" name="Order.Main.CustomerId" asp-for="Order.Main.CustomerName" readonly />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-danger btn-flat" style="width:40px"><i class="fa fa-truck"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3" asp-for="Order.Main.DeliveryDate">日期</label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <input type="text" asp-for="Order.Main.DeliveryDate" class="form-control pull-right" value="@Model.Order.Main.DeliveryDate.Value.ToString("yyyy-MM-dd")" readonly />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-danger btn-flat" style="width:40px"><i class="fa fa-calendar-o"></i></button>
                                </span>
                            </div>
                        </div>
                        <span class="help-block" asp-validation-for="Order.Main.DeliveryDate"></span>
                    </div>
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3" asp-for="Order.Main.DeliveryAddress">地址</label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <input asp-for="Order.Main.DeliveryAddress" class="form-control" readonly />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-danger btn-flat" style="width:40px"><i class="fa fa-map-o"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <div class="form-group has-warning">
                        <label class="control-label col-xs-3" asp-for="Order.Main.Contact"></label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <input type="text" asp-for="Order.Main.Contact" class="form-control" readonly />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-warning btn-flat" style="width:40px"><i class="fa fa-user"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="control-label col-xs-3" asp-for="Order.Main.ContactNumber"></label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <input type="text" asp-for="Order.Main.ContactNumber" class="form-control" readonly />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-warning btn-flat" style="width:40px"><i class="fa fa-phone"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="control-label col-xs-3" asp-for="Order.Main.Remarks"></label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <textarea asp-for="Order.Main.Remarks" class="form-control" rows="3" readonly></textarea>
                                <span class="input-group-addon"><i class="fa fa-ellipsis-h"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <div class="form-group">
                        <label class="control-label col-xs-3" asp-for="Order.Main.DeliveryId">送货单号</label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <input type="text" asp-for="Order.Main.DeliveryId" class="form-control" readonly />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default btn-flat" style="width:40px"><i class="fa fa-sticky-note-o"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-3" asp-for="Order.Main.CreatedBy"></label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <input type="text" asp-for="Order.Main.CreatedBy" class="form-control" readonly />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default btn-flat" style="width:40px"><i class="fa fa-user-o"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-3" asp-for="Order.Main.CreatedDate"></label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <input type="text" asp-for="Order.Main.CreatedDate" class="form-control" value="@Model.Order.Main.CreatedDate.Value.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default btn-flat" style="width:40px"><i class="fa fa-calendar-o"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- /.row -->
        </section>
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-solid">
                    <div class="box-header">
                        <div class="box-title">送货物料清单</div>
                    </div>
                    <div class="box-body">
                        <table data-toggle="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>描述</th>
                                    <th>规格</th>
                                    <th class="hidden-xs">长</th>
                                    <th class="hidden-xs">宽</th>
                                    <th class="hidden-xs">高</th>
                                    <th>片数</th>
                                    <th class="hidden-xs">单位数量</th>
                                    <th class="hidden-xs">计价单位</th>
                                    <th class="hidden-xs">单价</th>
                                    <th class="hidden-xs">金额</th>
                                    <th class="hidden-xs">备注</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Order.Details.Count == 0)
                                {
                                    <tr><td colspan="20" class="text-center">出库清单空</td></tr>

                                }
                                @foreach (var item in Model.Order.Details)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Description</td>
                                        <td>@item.Specification</td>
                                        <td>@item.Length</td>
                                        <td>@item.Width</td>
                                        <td>@item.Height</td>
                                        <td>@item.Qty</td>
                                        <td>@item.UnitQty</td>
                                        <td>@item.Unit</td>
                                        <td>@item.Price</td>
                                        <td>@item.Amount</td>
                                        <td>@item.Remarks</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <!-- /.col -->
        </div>
    </form>
</div>
@section Scripts{
    <script>
        $(function () {
            $('#vueScope').show()
        })
    </script>
}
@section Styles{
    <style>
        [v-cloak] {
            display: none;
        }

        .form-horizontal .control-label {
            text-align: right;
            margin-bottom: 0;
            padding-top: 7px;
        }

        body.modal-open {
            position: fixed;
            overflow: hidden;
            left: 0;
            right: 0;
        }

        .modal {
            -webkit-overflow-scrolling: auto;
        }
    </style>
}